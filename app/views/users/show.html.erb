<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>

<% userLeague = League.find(@user.league_id) %>
<p>League: <%= link_to userLeague.name, userLeague %></td></p>

<% matches = userLeague.matches %>
<div class="container">
	<h3>Matches</h3>
      <table class="table">
        <tbody>
          <% matches.each do |match| %>
            <tr>
              <% if match.player1_id == @user.id %></td>
              	<% if match.result == 0 %>
              		<%result = "Win"%>
              		<%else result = "Loss"%>
              		<% end %>

              	<%=result + " against " + User.find(match.player2_id).name %>
              <% end %>
              <% if match.player2_id == @user.id %></td>
              	<% if match.result == 0 %>
              		<%result = "Loss"%>
              		<%else result = "Win"%>
              		<% end %>

              	<%=result + " against " + User.find(match.player1_id).name %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
